; Twin Bee(SCC+)
;
; @autor RuRuRu
; @date 2011/09/08 1st Release
;

	cseg
	org	0400h

stack:	equ	0f380h		; スタックエリア

main:
	di
	im	1
	ld	sp,stack
	call 	init
	ei

loop:
	in	a,(02h)		; キー入力待ち
	or	a
	jr	z,loop

	cp	01h
	jr	nz,stop

	in	a, (04h)
	cp	01h
	jr	nz, no_stop

	call	play_stop
	halt

no_stop:
	di
	in	a,(03h)
	call	04009h
	ei
	jr	play_end

stop:
	call	play_stop

play_end:
	xor	a		; hoot status変更
	out	(02h),a
	jr	loop

play_stop:
	di
	ld	a, 0F7h
	call	04009h
	ei
	ret

init:
	ld	a, 0c3h
	ld	(0FD9Fh), a
	ld	hl, irq
	ld	(0FDA0h), hl

	ld	a, 0D7h		; Slot Map
	out	(0A8h), a

	ld	a,040H
	ld	(0E002H),a

	ld	a,020H
	ld	(0BFFEH),a	; SCC+ mode

	call	04000h		; Init

	ld	a,007H
	ld	e,0BFH
	call	00093H

	call	play_stop

	ret

irq:
	di
	call	04006h
	ret
